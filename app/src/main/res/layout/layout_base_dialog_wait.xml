<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.lqh.fastlibrary.view.loadingindicatorview.LoadingIndicatorView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loading_indicatorView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:indicatorColor="@color/material_deep_teal_20"
        app:indicatorName="BallSpinFadeLoaderIndicator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="加载中,请稍等..."
        android:textSize="16sp" />

</LinearLayout>