<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/multi_state_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_multi_state_empty_imgage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_multi_empty" />

    <TextView
        android:id="@+id/tv_multi_state_empty_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/multi_status_empty_content"
        android:textColor="@color/multi_status_content_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_multi_state_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/multi_status_retry_text"
        android:textColor="@color/multi_status_retry_text_color"
        android:textSize="13sp"
        android:textStyle="bold" />
</LinearLayout>
